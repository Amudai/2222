@import "/template/wxss/waterfall.wxss"; 
.toHome {
  width: 48rpx;
  height: 44rpx;
  position: absolute;
  top: 72rpx;
  left: 10rpx;
  z-index: 9999999999999999;
}

.container {
  width: 100%;
  height: 100vh;
  background: #f5f5f5;
}

.flex_box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #333;
}

.title {
  font-size: 34rpx;
}

.phone {
  font-size: 30rpx;
  margin-top: 10rpx;
}

.font {
  font-size: 28rpx;
  color: #333;
}

.tips {
  margin: 14rpx 0;
}

.cell {
  font-size: 28rpx;
  color: #666;
  margin: 8rpx 0;
}

.cancelRefund {
  width: 702rpx;
  padding: 20rpx 0;
  background: #07BC04;
  font-size: 30rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  margin:  30rpx auto;
}

.store_info_wrapper {
  width: 100%;
  display: flex;
  align-items: center
}

.store_info {
  width: 500rpx;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  /* align-items: center */
}

.store_logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx; 
}

.store_name {
  color: #333333;
  font-size: 30rpx;
}

.order_time {
  color: #666;
  font-size: 24rpx;
}