.pay-money-wrapper {}

.pay-store-wrapper {
  width: 100%;
  background: #fff;
  padding: 32rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.pay-store-tips {
  color: #666;
  font-size: 28rpx;
  font-weight: 400;
}


.cell-title{
  color:black;
  font-weight: 550;
  font-size: larger;

}
.toolbar-class view{
  color:black !important;
  font-size: 32rpx;
}
view .active-red{
  color:#FC0D1A;
  height: 70rpx;
  font-size: 30rpx;
  font-weight: 600;
}
.pay-store-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.pay-store-name {
  color: #333;
  font-size: 34rpx;
  font-weight: bold;
}

.pay-store-jump {
  display: flex;
  align-items: center;
}

.pay-money-box {
  display: flex;
  margin-top: 20rpx;
}

.pay-money-icon {
  color: #333;
  font-size: 48rpx;
  font-weight: bold;
  margin-top: 50rpx;
}

.van-field__body .van-field__input {
  height: 100rpx;
  font-weight: bold;
  font-size: 90rpx;
}

.pay-btn {
  position: absolute;
  bottom: 360rpx;
  left: 24rpx;
  width: 702rpx;
  height: 90rpx;
  background: #DB3644;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.pay-check-money {
  font-size: 36rpx;
  color: #333333;
  font-weight: 500;
  text-align: center;
  margin-top: 60rpx;
}

.pay-check-fudou {
  font-size: 28rpx;
  color: #333333;
}

.pay-check-fudou text {
  color: #DB3644;
}

.pay-checkbox {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.pay-balance {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin: 20rpx 0 40rpx 0;
}

.ad-img-wrapper {
  position: absolute;
  bottom: 0;
  width: 100%;
}

.ad-img-wrapper image {
  width: 100%;
  position: absolute;
  bottom: 0;
  margin-top: 100rpx;
  height: 240rpx;
}