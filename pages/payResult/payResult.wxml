<van-nav-bar title="支付结果" left-text="返回" left-arrow fixed="true" custom-style="background: #D63341;" title-class="title" bind:click-left="onClickLeft" />
<view class="container">
  <view wx:if="{{loadingStatus}}" class="loading">
    <van-loading size="24px" vertical color="#1989fa" size="40px"><text class="loading-text">支付结果处理中，请稍后...</text></van-loading>
  </view>
  <view class="container inner" wx:else>
    <view class="error_wrapper flex flex-c ct-ai" wx:if="{{payData.pay_status === 1}}">
      <image class="error_img" src="/images/business/success.png"></image>
      <view class="font-30 cl-3 mt-30">
        ¥
        <text class="pay_money">{{payData.actual_money}}</text>
      </view>
      <view class="font-30 cl-3 mt-30">支付成功</view>

      <view class="long_ball"></view>
      <view class="pay_info">
        <view class="long_ball_shadow"></view>

        <view class="pay_item flex sb-ai van-hairline--bottom">
          <view class="fs-30 cl-6">商铺名称</view>
          <view class="fs-30 cl-3">{{payData.store_name}}</view>
        </view>
        <view class="pay_item flex sb-ai van-hairline--bottom">
          <view class="fs-30 cl-6">订单号</view>
          <view class="fs-30 cl-3">{{payData.order_sn}}</view>
        </view>
        <view class="pay_item flex sb-ai">
          <view class="fs-30 cl-6">支付时间</view>
          <view class="fs-30 cl-3">{{payData.paid_time}}</view>
        </view>
      </view>
      <view  clss="coupon_wrapper" wx:if="{{payData.give_bean>0}}">
        <image class="coupon_img" src="/images/business/coupon2.png"></image>
        <view class="coupon_money">
          <image class="fudou_img" src="/images/business/douzi.png"></image>
          <text>{{payData.give_bean}}个福豆</text>
        </view>
        <view class="coupon_type">福豆奖励</view>
      </view>

      <view wx:if="{{payData.give_bean>0}}" class="fs-32 cl-3 fu_text">恭喜获得福豆</view>
      <view wx:if="{{payData.give_bean>0}}" class="tips fs-28 mt-10" bindtap="jumpToFudou">查看我的福豆<text style="margin-left:10rpx">>></text></view>
    </view>
    <view class="error_wrapper flex flex-c ct-ai" wx:else>
      <image class="error_img" src="/images/business/error.png"></image>
      <view class="font-30 cl-3 mt-30">支付失败</view>
      <view class="font-30 cl-3 mt-30">哎呀，该订单已被支付了</view>
    </view>
    <view class="back-home flex ct-ai mt-20" bindtap="goHome">返回首页</view>
  </view>
</view>