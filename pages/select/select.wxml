<!--pages/select/select.wxml-->
<import src="/template/wxml/waterfall.wxml" />

<view class="selection flexbox">
  <view class="selectbtn flexbox">
    <label><image src="../../images/select.png" mode="aspectFit"></image></label>
    <input  placeholder="" bindinput='inputup' value="{{value}}" placeholder-class="placeholder" placeholder='搜索商户名称'></input> 
  </view>
    <text bindtap="select" data-fromselect="select">搜索</text>
</view>
<view class="hot paddingbox" wx:if="{{hotList}}" hidden="{{result}}">
  <view class="hottitle">热门搜索</view>
  <view style="padding-left:54rpx;">
    <view class="tags">
      <text class="ellipsis" wx:for="{{hotList}}" wx:key='item' bindtap="gotoselect" data-value="{{item.store_name}}" data-discount_id="{{item.discount_id}}" style="color:#8F8D8D">{{item.store_name}}</text>
    </view> 
  </view>
</view>

<view class="nearTime  paddingbox" wx:if="{{nearList.length>0}}" hidden="{{result}}">
  <view class="hottitle flexbox">
    <text>最近搜索</text>
    <image bindtap="delefn" src="../../images/storeDetails/dele.png" mode="aspectFit"></image>
    
  </view>
  <view style="padding-left:54rpx;">
    <view class="tags">
      <block  wx:for='{{nearList}}' wx:key='item'>
           <text class="ellipsis" data-value="{{item.name}}" wx:if='{{item.name}}' bindtap="gotoselect" data-discount_id="{{item.discount_id}}" style="color:#8F8D8D">{{item.name}}</text>
      </block>
    </view>
  </view>

</view>

