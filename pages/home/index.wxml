	</view>

	<!-- <view class="nomore-wrapper">
		<text wx:if="{{ isAdd }}">没有更多数据了哦~</text>
		<van-loading type="spinner" color="#1989fa" wx:else />
	</view> -->
</view>

<view class="help">
	<button session-from="nickName={{userInfo.nickName}}|avatarUrl={{userInfo.avatarUrl}}}" open-type="contact"
		bindcontact="handleContact"></button>

	<button class="usermask" wx:if='{{isUser}}' hidden="{{zIndex==0}}" open-type="getUserInfo"
		bindgetuserinfo="getUserInfo"></button>
	<button class="usermask phonemask" wx:if="{{isPhone}}" open-type="getPhoneNumber"
		bindgetphonenumber="getPhoneNumber"></button>
	<image src="../../images/help.png" style="zIndex:{{zIndex}}"></image>
</view>

<!-- 开启定位弹窗 -->
<van-dialog use-slot title="温馨提示！" show="{{ showOpenLoal }}" show-cancel-button bind:confirm="handleOpenLoal"
	bind:close="handleCloseLoal">
	<view class="loal-tips">检测到您没打开福猫来了的定位权限，是否去设置打开？</view>
</van-dialog>