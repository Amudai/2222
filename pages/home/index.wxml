<import src="/template/wxml/waterfall.wxml" />

<view class="scrollBox">

	<view class="home-top-bg">
		<view>
			<view style="height: {{statusBarHeight}}px;"></view>
			<view class="home-top-city" style="height: {{toBarHeight}}px;" bindtap="changeCity">
				<van-icon name="location" bind:click="getLoaction" class="location-icon" color="#ffffff" size="40rpx" />
				<view class="city">{{store_area !==''?store_area:curCity}}</view>
				<van-icon name="arrow-down" class="arrow-down-icon" color="#ffffff" size="30rpx" />
			</view>
		</view>
