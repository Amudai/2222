		<!-- 搜索栏 -->
		<van-sticky bind:scroll="getSearchScroll">
			<navigator wx:if="{{!searchTop}}" class="selectbtn flexbox"
				url="../../pages/select/select?city={{store_area !=''?fcity:curCity}}&store_area={{store_area}}&&longitude={{longitude}}&latitude={{latitude}}">
				<label>
					<image src="../../images/select.png" mode="aspectFill"></image>
				</label>
				<text class="placeholder">福猫搜一搜</text>
			</navigator>
			<view class="searh-wrapper" style="height: {{statusBarHeight+toBarHeight}}px;" wx:if="{{searchTop}}">
				<view style="width:100%;height: {{statusBarHeight}}px;"></view>
			<view class="flex ai" style="height:{{toBarHeight}}px">
				<navigator style="margin: 0rpx 0 0 32rpx; width: 500rpx;" class="selectbtn flexbox"
					url="../../pages/select/select?city={{store_area !=''?fcity:curCity}}&store_area={{store_area}}&&longitude={{longitude}}&latitude={{latitude}}">
					<label>
						<image src="../../images/select.png" mode="aspectFill"></image>
					</label>
					<text class="placeholder">福猫搜一搜</text>
				</navigator>
			</view>
			</view>
		</van-sticky>

		<!-- 轮播图 -->
		<swiper class="card-swiper" circular autoplay interval="5000" duration="500" bindchange="handleImgChange"
			indicator-color="#8799a3" indicator-active-color="#0081ff">
			<swiper-item wx:for="{{list_ad}}" wx:key="index" class="{{currentIndex==index?'cur':''}}">
				<view class="swiper-item">
					<image style="width:100%;height:100%" src="{{item.ad_pic}}" lazy-load='true' />
				</view>
			</swiper-item>
		</swiper>
		<view wx:if='{{isShowCate}}' class="nav nav1 flexbox">
			<block wx:for='{{list_category}}' wx:key='index'>
				<navigator class="nav_item"
					url="../../pages/classification/classification?category_id={{item.category_id}}&sec_category_id={{item.sec_category_id}}&category_name={{item.category_name}}&&longitude={{longitude}}&latitude={{latitude}}&store_city={{store_area !=''?fcity:curCity}}&store_area={{store_area}}&store_street={{store_street}}"
					hover-class="navigator-hover">
					<image mode="aspectFill" src="{{item.category_pic}}"></image>
					<view>{{item.category_name}}</view>
				</navigator>

			</block>
		</view>
		<!-- 二级分类导航 -->
		<view wx:if='{{isShowCate}}' class="nav nav1 flexbox">

			<block wx:for='{{list_category_second}}' wx:key='index'>
				<navigator class="nav_item" wx:if="{{item.category_name=='全部'}}"
					url="../../pages/allCategories/allCategories?category_id={{item.category_id}}&sec_category_id={{item.sec_category_id}}&category_name={{item.category_name}}&&longitude={{longitude}}&latitude={{latitude}}&store_city={{curCity}}&store_area={{store_area}}&store_street={{store_street}}"
					hover-class="navigator-hover">
					<image mode="aspectFill" src="{{item.category_pic}}"></image>
					<view>{{item.category_name}}</view>
				</navigator>
				<navigator class="nav_item" wx:else
					url="../../pages/classification/classification?category_id={{item.category_id}}&sec_category_id={{item.sec_category_id}}&category_name={{item.category_name}}&&longitude={{longitude}}&latitude={{latitude}}&store_city={{curCity}}&store_area={{store_area}}&store_street={{store_street}}"
					hover-class="navigator-hover">
					<image src="{{item.category_pic}}"></image>
					<view>{{item.category_name}}</view>
				</navigator>

			</block>
		</view>

