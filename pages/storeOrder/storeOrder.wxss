.container {
  width: 100%;
  /* height: 100vh; */
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  align-items: center;
 }

 .flex_wrapper {
   display: flex;
   align-items: center;
 }

.store_name {
  font-size: 30rpx;
  color: #333;
  margin-left: 20rpx;
}

.arrow_bottom {
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
}

.tabs {
  width: 100%;
  margin-top: 20rpx;
}

.line_class {
  background: #FC0D1A;
  color: #FC0D1A;
}

.tabs .van-tab--active {
  color: #FC0D1A;
}

.item_top {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.item_top_left {
  display: flex;
  align-items: center;
}

.item_top_left image {
  width: 44rpx;
  height: 44rpx;
  margin-left: 20rpx;
}

.item_top_left view {
  font-size: 30rpx;
  color: #333;
  margin-left: 20rpx;
}

.item_top_right {
  font-size: 24rpx;
  color: #666;
}

.item_cell {
  color: #666;
  font-size: 28rpx;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
}

.van-hairline--top {
  margin-top: 30rpx;
}

.cancle_btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FC0D1A;
  font-size: 28rpx;
}

.store_wrapper {
  width: 100%;
  height: 460rpx;
}

.bg {
  width: 100%;
  height: 490rpx;
}