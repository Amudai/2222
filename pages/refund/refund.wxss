.container {
  width: 100%;
  height: 100vh;
  background: #efefef;
}

.store_logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 40rpx;
}

.flex_box {
  display: flex;
  align-items: center;
}

.refund_money {
  color: #333333;
  font-size: 28rpx;                                 
}

.refund_money text {
  font-size: 36rpx;
  color: #FC0D1A;
}

.refund_reason {
  font-size: 26rpx;
  color: #666;
  margin: 10rpx 0;
}

.refund_time {
  font-size: 26rpx;
  color: #FC0D1A;
}

.reason_item {
  width: 100%;
  height: 100rpx;
  color: #333333;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #E5E5E5; 
}

.no_bottom {
  border-bottom: none; 
}

.refund_submit {
  width: 702rpx;
  padding: 20rpx 0;
  border-radius: 16rpx;
  background: #FC0D1A;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx auto;
  color: #fff;
}