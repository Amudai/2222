<view class="container">
  <van-nav-bar title="收款" left-text="返回" left-arrow fixed="true" custom-style="background: #D63341;" title-class="title" bind:click-left="onClickLeft" />
  <view class="bg_color">
    <view class="title">{{orderInfo.store_name}}</view>
  </view>
  <view class="code_top"></view>
  <!-- 二维码 -->
  <view class="code_wrapper">
    <view class="code_shadow"></view>
    <view class="code_title">收款二维码</view>
    <view class="code_img_wrapper">
      <image class="code_bg" src="../../images/business/code_bg.png"></image>
      <image class="code_img" src="{{orderInfo.qrcode_url}}"></image>
    </view>
    <view class="money">
      <text>¥</text>{{orderInfo.pay_amount}}</view>
  </view>
  <!-- 温馨提示 -->
  <view class="tips">温馨提示：已生成付款码，需要引导用户通过扫小票付款 码、桌码或者此付款码进行付款
  </view>
  <view class="print_btn" bindtap="handlePrintOrder">打印订单</view>
</view>