.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  align-items: center;
}

.bg_color {
  width: 100%;
  height: 260rpx;
  background: #fc0d1a;
}

.title {
  font-size: 36rpx;
  color: #fff;
  font-weight:500;
  text-align: center;
  margin-top: 60rpx;
} 

.code_top {
  width: 720rpx;
  height: 18rpx;
  background: #d80d18;
  border-radius: 9rpx;
  margin-top: -90rpx;
}

.code_wrapper {
  width: 690rpx;
  height: 700rpx;
  background: rgba(254, 255, 254, 1);
  box-shadow: 0px 6px 8px 0px rgba(0, 0, 0, 0.02);
  margin-top: -8rpx;
}

.code_shadow {
  width: 690rpx;
  height: 35rpx;
  background: linear-gradient(180deg, rgba(252, 13, 26, 1) 0%, rgba(252, 13, 26, 0) 100%);
  opacity: 0.5;
}

.code_title {
  color: #999999;
  font-size: 26rpx;
  text-align: center;
  margin-top: 40rpx;
}

.code_img_wrapper {
  width: 380rpx;
  height: 380rpx;
  margin: 40rpx auto;
  display: flex;
  align-items: center;
  justify-content: center
}

.code_bg {
  width: 380rpx;
  height: 380rpx;
  z-index: 100;
  position: absolute;
}

.code_img {
  width: 363rpx;
  height: 363rpx;
  position: relative;
  /* left: 26%; */
  /* top: 20px; */
}

.money {
  color: #333;
  font-size: 76rpx;
  font-weight: 600;
  text-align: center;
}

.money text {
  font-size: 48rpx;
  margin-right: 10rpx; 
}

.tips {
  width: 650rpx;
  font-size: 26rpx;
  color: #999;
  text-align: center;
  margin-top: 40rpx;
}

.print_btn {
  position: fixed;
  bottom: 40rpx;
  width: 702rpx;
  height: 88rpx;
  background: #FC0D1A;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}

.title {
  color: #fff !important;
}

