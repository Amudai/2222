.bule {
  background: #64b7e6 !important;
}

.yellow {
  background: #f2a141 !important;
}

.store-item {
  width: 750rpx;
  /* height: 234rpx; */
  margin: 0 auto;
  display: flex;
  align-items: flex-start;
  padding: 32rpx 32rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #E5E5E5;
}

.store-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
  margin: 32rpx;
}

.store-item-middle {
  width: 380rpx;
  /* height: 170rpx; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.store-item-middle text {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
}

.user_logo {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.store-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.store-tips {
  font-size: 24rpx;
  font-weight: 400;
  color: #333333;
}

.store-item-img {
  width: 170rpx;
  height: 170rpx;
  border-radius: 10rpx;
  background: #111;
  margin-right: 20rpx;
}

.store-item-right {
  width: 160rpx;
  padding-top: 40rpx;
  padding-bottom: 50rpx;
  height: 170rpx;
  box-sizing: border-box;
  /* height: 170rpx; */
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  flex-wrap: wrap;
}

.store-item-tag {
  padding: 0 10rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
  height: 28rpx;
  font-weight: bold;
  background: #FF6532;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
  box-sizing: border-box;
}

.green-color {
  background-color: #7EC157;
}

.store-item-tag-kong {
  font-size: 20rpx;
  padding: 0 6rpx;
  border: 2rpx solid #FF2245;
  border-radius: 4rpx;
  margin-right: 4rpx;
  color: #FF2245;
  margin-right: 10rpx;
  margin-top: 6rpx;
}

.loal-tips {
  padding: 30rpx 60rpx;
  color: #666;
  text-align: center;
}