/* component/TableCodeAlert/TableCodeAlert.wxss */
.table-code-alert-father{
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, .2);
  position: fixed;
  z-index: 1;
}
.table-code-alert-child{
  position: absolute;
  bottom: 538rpx;
  left: 50%;
  transform: translateX(-50%);
  width:550rpx;
  height:406rpx;
  background:rgba(255,255,255,1);
  border-radius:20rpx;
  padding-top: 50rpx;
  padding-bottom: 60rpx;
  padding-left: 70rpx;
  padding-right: 70rpx;
  box-sizing: border-box;
}
.title{
  width:100%;
  height:32rpx;
  font-size:34rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(17,17,17,1);
  margin-bottom: 80rpx;
  text-align: center;
}
.zuohao{
  width:100%;
  height:34rpx;
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(71,72,72,1);
  line-height:32rpx;
  text-align: center;
  margin-bottom: 80rpx;
}
.but{
  display: flex;
  justify-content: space-between;
}
.cancel{
  width:160rpx;
  height:70rpx;
  background:rgba(238, 238, 238, 1);
  border-radius:30rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(115,115,115,1);
  line-height: 70rpx;
  text-align: center;
}
.confirm{
  width:160rpx;
  height:70rpx;
  background:linear-gradient(90deg,rgba(253,13,26,1) 0%,rgba(255,39,78,1) 100%);
  border-radius:30rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height: 70rpx;
  text-align: center;
}