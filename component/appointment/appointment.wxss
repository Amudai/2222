/* component/appointment/appointment.wxss */

.appointmentcontainer{
  width:240rpx;
  height:70rpx;
  background:rgba(255,28,66,1);
  opacity:0.8;
  border-radius:35rpx;
  position: relative;
  font-size:26rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:white;
  line-height: 70rpx;
  display: flex;
}
.appointmentcontainer view{
  flex: 1;
  text-align: center;
}
.changeball1{
  position: absolute;
  width:85rpx;
  height:60rpx;
  background:rgba(255,255,255,1);
  border-radius:30rpx;
  top: 50%;
  transform: translateY(-50%);
  left: 5rpx;
  line-height: 60rpx;
}
.changeball2{
  position: absolute;
  width:85rpx;
  height:60rpx;
  background:rgba(255,255,255,1);
  border-radius:30rpx;
  top: 50%;
  right: 5rpx;
  transform: translateY(-50%);
  line-height: 60rpx;
}
